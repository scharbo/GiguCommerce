@model RegisterViewModel
@{
    ViewBag.Title = "Sign Up";
}
<<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" id="loginform">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ">
                <label asp-for="Email">Email: </label>
                <input asp-for="Email" class="form-control" type="text" placeholder="Email">
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <div class="form-group ">
                    <label asp-for="Password">Password:</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                    <span asp-validation-for="Email" class="text-warning"></span>

            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password:</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password">
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div class="form-group text-center m-t-20">          
                    <input class="btn btn-success" type="submit" value="Register"/>           
            </div>
            <div class="form-group m-b-30">
                <div class="text-center">
                    <p>Already you have an account? <a asp-controller="Account" asp-action="Login" class="text-primary m-l-5"><b>Sign In</b></a></p>
                </div>
            </div>
        </form>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</div>