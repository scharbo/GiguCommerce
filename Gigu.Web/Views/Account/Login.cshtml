@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

@section Scripts{
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" id="loginform">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ">

                <label asp-for="Email">Email:</label>
                <input asp-for="Email" class="form-control" type="text" placeholder="User name">
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Remember Me?</label>
                </div>
                </div>

                <div class="form-group text-center m-t-20">
                    <input class="btn btn-success" type="submit" value="Login"/>
                </div>
                <div class="form-group m-b-0">
                    <div class="col-sm-12 text-center">
                        <p>Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary m-l-5"><b>Sign Up</b></a></p>
                    </div>
                </div>
        </form>
    </div>
</div>
