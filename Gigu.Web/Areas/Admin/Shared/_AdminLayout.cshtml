<!DOCTYPE html>
<html>
<head>
    <title>@Global.WebSiteTitle: @ViewBag.Title</title>
    <meta name="description" content="@Global.MetaDescription" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <environment names="Development">
        @*<link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
            <link href="~/node_modules/font-awesome/css/font-awesome.css" rel="stylesheet" />*@
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        @*<link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
            <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />*@
        <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <header>
        <div class="container">
            <div class="page-logo nav navbar-brand navbar-nav float-left">
                <a href="~">
                    <i class="fa fa-paint-brush"></i> @Global.WebSiteTitle
                </a>
            </div>
            <div class="nav navbar-nav float-right">
                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                    <span class="fa fa-sign-out" aria-hidden="true"></span> Logout
                </a>
            </div>
        </div>
    </header>
    <section class="container">
        <div class="sidebar-nav">
            <nav class="navbar navbar-default navbar-dark bg-dark navbar-expand-md">
                <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="theMenu" class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Index">Home</a></li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="content-wrapper">
            <div>
                @RenderBody()
            </div>
        </div>
    </section>
    <footer class="container">
        <div class="text-center">Copyright 2018 Dutch Treat LLC</div>
    </footer>
    <environment names="Development">
        @*<script src="~/node_modules/jquery/dist/jquery.js"></script>
            <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>*@
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
        <script src="~/js/index.js"></script>
    </environment>
    <environment names="Staging,Production">
        @*<script src="~/node_modules/jquery/dist/jquery.min.js"
                    asp-fallback-src="~/node_modules/jquery/dist/jquery.min.js"
                    asp-fallback-test="window.jQuery"></script>
            <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
        <script src="~/lib/jquery/jquery.min.js"
                asp-fallback-src="~/lib/jquery/jquery.min.js"
                asp-fallback-test="window.jQuery"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/dist/dutchtreat.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("scripts", false)
</body>
</html>